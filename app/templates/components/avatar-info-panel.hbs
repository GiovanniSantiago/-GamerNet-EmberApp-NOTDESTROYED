<!--
parameters:
	user:
		user_id
		name
		age
		country
		language[]
-->
<div class="panel-heading">
	<img class="img-responsive center-block" src={{user.avatar}} />
</div>
<div class="panel-body">
	<div>
		<div class="pull-right">
			{{#input type="button" action="submitFriend"}}<span class="glyphicon glyphicon-plus"></span> Friend{{/input}}
			<button class="btn btn-default"  {{action "validateUser" on="click"}}>Sign in</button>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<p class="text-muted text-right">Name:</p>
		</div>
		<div class="col-md-8">
			<p>{{user.full_name}}:{{user.user_id}}</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<p class="text-muted text-right">Age:</p>
		</div>
		<div class="col-md-8">
			<p>{{user.age}}</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<p class="text-muted text-right">Country:</p>
		</div>
		<div class="col-md-8">
			<p>{{user.country}}</p>
		</div>
	</div>
</div>
