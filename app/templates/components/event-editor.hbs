<form class="form-horizontal" {{action "onSubmitPost" on="submit"}}>
	<div class="form-group">
		<label class="col-md-2 control-label">Title</label>
		<div class="col-md-10">
			{{input value=title class="form-control" placeholder="Untitled"}}
		</div>
	</div>
	<div class="dropdown">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Dropdown Example
	  <span class="caret"></span></button>
	  <ul class="dropdown-menu">
		<li><a href="#">TOURNAMENT</a></li>
		<li><a href="#">FRIENDLY_GAME</a></li>
		<li><a href="#">EXHIBTION</a></li>
		<li><a href="#">PREMIERE</a></li>
		<li><a href="#">TRAILER</a></li>
		<li><a href="#">GENERAL</a></li>
	  </ul>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label">Message</label>
		<div class="col-md-10">
			{{textarea value=body class="form-control" rows="5"}}
		</div>
	</div>
	<div class="form-group">
	    <div class="col-md-offset-2 col-md-10">
	    	<button type="submit" class="btn btn-default">Submit Post</button>
	    </div>
	</div>
</form>
 